---
import config from "@/config/config.json";
import { Image } from "astro:assets";
const { src, text, width, height } = Astro.props;
const {
  logo,
  title,
}: {
  logo: string;
  title: string;
} = config.site;

const nm_aspect_ratio = 6.25;

let _width = width ? width : undefined;
let _height = height ? height : 30;

if (_width && !_height) {
  _height = _width / nm_aspect_ratio;
} else if (!_width && _height) {
  _width = _height * nm_aspect_ratio;
}

---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <Image
        width={_width}
        height={_height}
        src={src ? src : logo}
        alt={title}
      />
    ) : text ? (
      text
    ) : (
      title
    )
  }
</a>

---
import { InmueblesApi } from "@/lib/inmuebles_api";
import type { Inmueble } from "@/types/inmueble.types";
const { inmueble } = Astro.props as { inmueble: Inmueble };
---

<article
  class="relative flex flex-row rounded-lg shadow-lg overflow-hidden mb-2"
>
  <div class="w-20">
    <img
      src={"https://nuevomilenio-inmo.com/" +
        inmueble.fotos_inmueble?.[0].thumbnail}
      alt={inmueble.fotos_inmueble?.[0].descripcion_corta}
      class="object-cover h-full"
    />
  </div>
  <div class="flex-5 flex-col justify-between p-6">
    <div class="flex flex-row items-center">
      <h3 class="text-md font-semibold text-gray-200">
        {inmueble.zona_inmueble?.nombre}, {inmueble.poblacion_inmueble?.nombre}
      </h3>
      <p class="text-sm text-gray-400 ml-5">{inmueble.referencia}</p>
    </div>
    <div class="flex flex-row justify-between justify-items-center">
      <p class="text-sm text-gray-500">
        {InmueblesApi.getPrice(inmueble)}
      </p>
      <a
        href={"https://nuevomilenio-inmo.com/inmueble/" + inmueble.referencia}
        class="text-sm font-semibold text-primary hover:text-primary-dark"
      >
        Ver m√°s
      </a>
    </div>
  </div>
</article>

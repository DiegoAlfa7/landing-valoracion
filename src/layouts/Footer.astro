    class="mt-auto w-full max-w-[85rem] py-10 px-4 sm:px-6 lg:px-8 lg:pt-20 mx-auto"
  >
    <!-- Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-10">
      <div
        class="col-span-full lg:col-span-1"
        style="filter: saturate(0%) brightness(300%)"
